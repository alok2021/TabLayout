<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_Background"
    android:orientation="vertical"
    tools:context=".GetStartedActivity">

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/cutom_toolbar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/splash_logo"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Estd. 1996"
        android:textColor="@color/whiteColorText"
        android:layout_marginTop="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/textView_margin_left"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Get Started with DBMCI"
            android:textAllCaps="true"
            android:textSize="20dp"
            android:textColor="@color/whiteColorText" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_button">

            <Spinner
                android:id="@+id/id_sp_countryCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"/>

            <EditText
                android:id="@+id/id_et_mobileNo"
                android:layout_width="match_parent"
                android:background="@null"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:inputType="number"
                android:maxLength="10" />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Or"
            android:textAlignment="center"
            android:textColor="@color/whiteColorText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:text="Login with facebook"
            android:textSize="19dp"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/facebook"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/whiteColorText" />

        <Button
            android:id="@+id/id_btn_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Next"
            android:textStyle="bold"
            android:textColor="@color/button"
            android:background="@drawable/rounded_button" />
    </LinearLayout>
</LinearLayout>